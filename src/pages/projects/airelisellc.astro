---
import "@/styles/project-details.css"
import ProjectLayout from "./ProjectLayout.astro"
---

<ProjectLayout title="Air Elise, LLC" currentProject="/projects/airelisellc">
    <div class="project-details">
        <div class="project-details-header">
            <h2>Air Elise, LLC</h2>    
            <p class="project-link">URL:<a href="https://airelisellc.com" target="_blank" rel="noopener noreferrer">airelisellc.com</a></p>
            <p>
                Business site for local HVAC service and repair company
            </p>
        </div>
        <img class="project-image" src="/screenshots/airelise/airelise-1.png" alt="airelise.com screenshot">
        <div class="project-details-body">
            <div class="project-impact project-points">
                <h4>Impact</h4>
                <ul>
                    <li>
                        Improved SEO through clean URL structure and optimized technical implementation
                    </li>
                    <li>
                        Provides professional public-facing presence for business
                    </li>
                </ul>
            </div>
            <img class="project-image" src="/screenshots/airelise/airelise-2.png" alt="airelise.com screenshot">
            <div class="project-tech project-points">
                <h4>Technical Details</h4>
                <ul>
                    <li>
                        Built with Astro SSG for optimal performance and SEO
                    </li>
                    <li>
                        Docker containerization for consistent deployment
                    </li>
                    <li>
                        Linode VPS hosting with Nginx
                    </li>
                    <li>
                        Deployed via GitHub Actions CI/CD pipeline
                    </li>
                </ul>
            </div>
        </div>
        <a class="back-to-top" href="#">back to top</a>
    </div>  
</ProjectLayout>