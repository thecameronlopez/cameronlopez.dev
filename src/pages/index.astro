---
import "@/styles/home.css"
import RootLayout from "@/layout/RootLayout.astro"
---

<RootLayout title="Cameron Lopez">
	<section id="hero">
        <h2><span>Digital Tools.</span><span>Real Impact.</span></h2>
        <div class="hero-slider" id="hero-slider" aria-live="polite">
            <p class="slider-word">Code.</p>
            <p class="slider-word">Create.</p>
            <p class="slider-word">Conquer.</p>
            <p class="slider-word">Repeat.</p>
        </div>
        <p class="grabber">Helping churches, creators, and teams build custom tools that actually work.</p>
        <div class="home-social-bar">
            <a href="https://github.com/thecameronlopez" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-github"></i>
            </a>
            <a href="https://www.facebook.com/cameron.lopez.191915" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-facebook-f"></i>
            </a>
            <a href="https://www.instagram.com/cameronlopez85/" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-instagram"></i>
            </a>
            <a href="https://linkedin.com/in/thecameronlopez" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-linkedin-in"></i>
            </a>
        </div>
    </section>
    <script>
        const slider = document.getElementById("hero-slider");
        const words = slider ? Array.from(slider.querySelectorAll(".slider-word")) : [];

        if (words.length > 1) {
            let current = 0;
            words[current].classList.add("active");
            setInterval(() => {
                words[current].classList.remove("active");
                current = (current + 1) % words.length;
                words[current].classList.add("active");
            }, 1600)
        }
    </script>
</RootLayout>
